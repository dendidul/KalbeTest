@model IEnumerable<KalbeTest.Models.CustomerModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Customer</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>


                </ul>


                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
            <a href="/Customer/Create/" class="btn btn-primary">Create Customer</a>
           
            <div class="x_content">
                <br />

                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>

                            <th>Customer Name</th>                          
                            <th>Customer BirthDate</th>                           
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            foreach (var i in Model)
                            {
                        <tr>
                            <td>@Html.DisplayFor(model => i.txtCustomerName)</td>

                            @{
                                if (i.bitGender == false)
                                {
                                    <td>Perempuan</td>
                                }

                                else
                                {
                                    <td>Laki - Laki</td>
                                }
                            }
                           

                            <td>

                                <a href="/Customer/Edit/@i.intCustomerId" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                @*<a href="/Produk/Details/@i.intProductId" class="btn btn-info btn-xs"><i class="fa fa-folder"></i>View Details </a>*@
                                <a href="/Customer/Delete/@i.intCustomerId" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
